 */
function cu_profile_module_manager_theme() {
  $registry = array();
  $template_dir = drupal_get_path('module', 'cu_profile_module_manager') . '/templates';
  $registry['express_bundle'] = array(
    'template' => 'express-bundle',
    'path' => $template_dir,
