/**
 * Implements hook_secure_permissions.
 */
function cu_profile_module_manager_secure_permissions($role) {
  $permissions = array(
    'site_owner' => array(
      'enable addon_bundles',
    ),
    'administrator' => array(
      'enable request_bundles',
    ),
    'developer' => array(
      'enable request_bundles',
    ),
  );

  if (isset($permissions[$role])) {
    return $permissions[$role];
  }
}

