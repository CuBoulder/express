/**
 * Implements hook_form_alter().
 *
 * Add validation to user form.
 */
function express_permissions_form_user_profile_form_alter(&$form, &$form_state) {
  global $user;
  $form['#validate'][] = 'express_permissions_site_owner_cap';

  $new_role_options = array();
  // Get Roles of user being edited.
  $original_role_options = $form['account']['roles']['#options'];

  foreach ($original_role_options as $rid => $role_name) {
    // Format role name to be  more readable.
    $new_role_name = check_plain($role_name);
    $new_role_name = ucwords(str_replace('_', ' ', $new_role_name));
    if ($role_name == 'edit_only') {
      if (in_array('developer', $user->roles) || in_array('administrator', $user->roles)) {
        $new_role_name =  '<i>' . $new_role_name . ' (temp role hidden from site owners)</i>';
      }
    }
    if ($role_name == 'access_manager') {
      if (in_array('developer', $user->roles) || in_array('administrator', $user->roles)) {
        $new_role_name =  '<i>' . $new_role_name . ' (hidden from site owners until 2.9.1)</i>';
      }
    }
    if ($role_name == 'configuration_manager') {
      if (in_array('developer', $user->roles) || in_array('administrator', $user->roles)) {
        $new_role_name =  '<i>' . $new_role_name . ' (hidden from site owners until 2.9.1)</i>';
      }
    }
    $new_role_options[$rid] = $new_role_name;

  }

  $form['account']['roles']['#options'] = $new_role_options;
}

/**
 * Validation function for user form.
 *
 * Check to make sure that there are no more than 5 site owners.
 */
function express_permissions_site_owner_cap(&$form, &$form_state) {
  // Limit of how many of the role we should allow.
  $limit = intval(variable_get('express_permissions_owner_cap', 5));

  // Get Roles of user being edited.
  $current_roles = $form_state['user']->roles;

  // Get Role ID.
  $role = user_role_load_by_name('site_owner');

  // Check to see if the user already has the role.
  // We should only run the validation of the role is being added.
  if (in_array($role->rid, $form_state['values']['roles'], TRUE) && !isset($current_roles[$role->rid])) {
    $users_in_role = express_permissions_get_site_owners();
    // If adding the role to this user would be over the limit, set an error.
    if ($users_in_role['count'] > $limit) {

      form_set_error("roles][$rid", "You have exceeded the allowed limit for Temporary Site Owners. To grant the role to this user you must first remove it from someone else. Current Site Owners include: " . $users_in_role['list']);
    }
  }

}

function express_permissions_form_user_external_invite_form_alter(&$form, &$form_state) {
  $form['#validate'][] = 'express_permissions_invite_site_owner_cap';
}

function express_permissions_invite_site_owner_cap(&$form, &$form_state) {
  // Limit of how many of the role we should allow.
  $limit = intval(variable_get('express_permissions_owner_cap', 5));

  // Get Role ID.
  $role = user_role_load_by_name('site_owner');

  if ($form_state['values']['rid'] == $role->rid) {
    $email_value = $form_state['values']['email'];
    // Split on , or line break.
    $emails = preg_split("/[\r\n,\s]+/", $email_value, -1, PREG_SPLIT_NO_EMPTY);
    $email_count = count($emails);
    $users_in_role = express_permissions_get_site_owners();
    if (($users_in_role['count'] + $email_count > $limit)) {
      form_set_error("", "You have exceeded the allowed limit for Temporary Site Owners. To grant this role you must first remove it from someone else. Current Site Owners include: " .  $users_in_role['list']);
    }
  }

}

/**
 * Helper funciton for form validation.
 *
 * Returns arary with count and list values
 */
function express_permissions_get_site_owners() {
  $users = array();
// Get Role ID.
  $role = user_role_load_by_name('site_owner');
  $rid = $role->rid;

  // Get current number of people with the role.
  // Get the total number of users with the role.
  $query = db_select('users_roles', 'ur');
  $query->fields('ur', array('uid', 'rid'));
  $query->condition('ur.rid', $rid, '=');
  $users['count'] = $query->countQuery()->execute()->fetchField();

  // try to avoid loading user objects
  if ($users['count'] > 5) {
      $results = $query->execute()->fetchCol();
      $site_owners = user_load_multiple($results);
      $user_list = array();
      foreach ($site_owners as $site_owner) {
        $user_list[] = !empty($site_owner->realname) ? $site_owner->realname : $site_owner->mail;
      }
     $users['list'] = join(', ', $user_list);
  }
  return $users;
}

/**
 * Implements hook_form_formid_alter().
 *
 * Remove underscores from roles to make the permissions table display better.
 */
function express_permissions_form_user_admin_permissions_alter(&$form, &$form_state) {
  $roles = $form['role_names'];
  // Get just the role arrays.
  $roles = array_intersect_key($roles, array_flip(element_children($roles)));
  // Replace underscores with spaces.
  foreach ($roles as $id) {
    $name = str_replace('_', ' ', $form['role_names'][$id]['#markup']);
    $form['role_names'][$id]['#markup'] = $name;
  }
  // Add some css to make the permissions table headers smaller.
  drupal_add_css('form#user-admin-permissions #permissions th { font-size:75%; font-weight:bold; } form#user-admin-permissions #permissions .permission-machine-name { font-size:75%; opacity:.75;}', 'inline');
}
